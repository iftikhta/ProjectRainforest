@model ProjectRainforest.Models.Product

@{
    ViewData["Title"] = "ViewProduct";
    Layout = "_layout";
}

<h1>ViewProduct</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendor.VendorTitle)
        </dd>
        @foreach (ProductInfo prodInfo in (List<ProductInfo>)ViewBag.details)
        {
            @if (prodInfo.ProductId == Model.ProductId)
            {
                <dd class="col-sm-10">
                    Description: @prodInfo.ProductDescription<br />
                    Price: @prodInfo.ProductPrice<br />
                </dd>
            }
        }
    <p class="btn btn-outline-dark" style="color: white;" name="productId">
      @*  @Ajax.Actio*@
        @Html.ActionLink("AddToCart", "AddToCart", "Cart", new { productId = Model.ProductId, userId = "f7864318-fa89-419e-b5ef-aa51fbcfd5d0", quantity = 1 })
    </p>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
