@model ProjectRainforest.Models.Product

@{
    ViewData["Title"] = "ViewProduct";
    Layout = "_layout";
}
@using Microsoft.AspNetCore.Identity
@using ProjectRainforest.Areas.Identity.Data

@inject UserManager<RainforestUser> UserManager

<h1>ViewProduct</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendor.VendorTitle)
        </dd>
        @foreach (ProductInfo prodInfo in (List<ProductInfo>)ViewBag.details)
        {
            @if (prodInfo.ProductId == Model.ProductId)
            {
                <dd class="col-sm-10">
                    Description: @prodInfo.ProductDescription<br />
                    Price: @prodInfo.ProductPrice<br />
                    @UserManager.GetUserId(User)!
                </dd>
            }
        }

    </dl>

    <div class="col-md-4">
        <form asp-controller="Cart" asp-action="AddToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Quantity: </label>
                <input class="form-control" type="number" max="5" min="1" name="q" value="1"/>
            </div>
            <div class="form-group">
                
                <input hidden class="form-control" name="productId" value="@Model.ProductId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
            <!--<p hidden class="btn btn-outline-dark" style="color: white;" name="productId">-->
                @*userId = UserManager.GetUserId(User)!*@
                <!--@Html.ActionLink("AddToCart", "AddToCart", "Cart", new { productId = Model.ProductId})
            </p>-->
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<script>
    $(function () {
        $('.link').click(function () {
            var ipvalue = $("#IP").val();
            this.href = this.href.replace("xxx", ipvalue);
        });
    });
</script>